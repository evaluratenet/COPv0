# Circle of Peers Development Environment
# Copy this file to .env and fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Discourse API Configuration
DISCOURSE_API_KEY=your_discourse_api_key_here
DISCOURSE_API_USERNAME=system

# Database Configuration
DATABASE_URL=postgresql://discourse:discourse_password@localhost:5432/discourse
REDIS_URL=redis://localhost:6379

# Email Configuration (for development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=test
SMTP_PASSWORD=test
SMTP_DOMAIN=circleofpeers.net

# Application Configuration
NODE_ENV=development
RAILS_ENV=development
DISCOURSE_HOSTNAME=localhost:3000

# Security (for development only)
SECRET_KEY_BASE=your_secret_key_base_here 